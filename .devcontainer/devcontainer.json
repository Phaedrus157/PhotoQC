{
  "name": "PhotoQC",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/apt-get:1": {
      "packages": "libgl1-mesa-glx"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "pip3 install --upgrade pip && pip3 install -r requirements.txt",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/PhotoQC,type=bind"
  ],
  "remoteUser": "vscode"
}